{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "coronavirus-api",
        "license": {
            "name": "Licença MIT",
            "url": "https://github.com/ArturMiguel/coronavirus-api/blob/master/LICENSE"
        },
        "description": "API para consulta de dados sobre o coronavírus (COVID-19) em países e estados de todo o mundo. Os dados são coletados do Google News a cada 4 horas."
    },
    "tags": [
        {
            "name": "Global",
            "description": "(Dados em todo o mundo)"
        },
        {
            "name": "Countries",
            "description": "(Dados em países e estados)"
        },
        {
            "name": "States",
            "description": "(Dados em estados)"
        }
    ],
    "paths": {
        "/api/v1/global": {
            "get": {
                "tags": [
                    "Global"
                ],
                "summary": "Retorna dados do coronavírus em todo o mundo.",
                "description": "Retorna dados globais do coronavírus. Os dados incluem quantidade de casos confirmados, recuperados e óbitos.",
                "responses": {
                    "200": {
                        "description": "ok",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Global"
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/countries": {
            "get": {
                "tags": [
                    "Countries"
                ],
                "summary": "Retorna dados do coronavírus em países e estados.",
                "description": "Retorna dados do coronavírus em todos os países e seus estados. Os dados incluem quantidade de casos confirmados, recuperados e óbitos.",
                "responses": {
                    "200": {
                        "description": "ok",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Country"
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/countries/{country}": {
            "get": {
                "tags": [
                    "Countries"
                ],
                "summary": "Retorna dados do coronavírus em um país específico.",
                "description": "Busca um país pelo nome e retorna seus dados do coronavírus. Os dados incluem quantidade de casos confirmados, recuperados e óbitos.",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "country",
                        "in": "path",
                        "description": "Nome do país",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Country"
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/states/{state}": {
            "get": {
                "tags": [
                    "States"
                ],
                "summary": "Retorna dados do coronavírus em um estado específico.",
                "description": "Busca um estado pelo nome e retorna seus dados do coronavírus. Os dados incluem quantidade de casos confirmados, recuperados e óbitos.",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "state",
                        "in": "path",
                        "description": "Nome do estado",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/State"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Global": {
            "type": "object",
            "properties": {
                "country": {
                    "type": "string"
                },
                "confirmed": {
                    "type": "string"
                },
                "recovered": {
                    "type": "string"
                },
                "death": {
                    "type": "string"
                }
            }
        },
        "Country": {
            "type": "object",
            "properties": {
                "country": {
                    "type": "string"
                },
                "confirmed": {
                    "type": "string"
                },
                "recovered": {
                    "type": "string"
                },
                "death": {
                    "type": "string"
                },
                "states": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/State"
                    }
                }
            }
        },
        "State": {
            "type": "object",
            "properties": {
                "state": {
                    "type": "string"
                },
                "confirmed": {
                    "type": "string"
                },
                "recovered": {
                    "type": "string"
                },
                "death": {
                    "type": "string"
                }
            }
        }
    },
    "externalDocs": {
        "description": "GitHub",
        "url": "https://github.com/ArturMiguel/coronavirus-api"
    },
    "schemes": [
        "https",
        "http"
    ],
    "host": "coronavirus-api.glitch.me",
    "basePath": "/"
}